@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Course</h1>
        <div class="container text-center">
      <div class="row row-cols-2">
            <div class="col-2" style="width: 40%">
                <h3> Khóa Học </h3>
                <hr style="color: red; border-width: 2px; border-style: solid" />
                
                <div class="list-group">
                    @foreach (var khoahoc in ViewBag.KhoaHoc)
                {
                     <a href="/home/subject?ID=@khoahoc.ID" class="list-group-item list-group-item-action">
                            @khoahoc.TenKhoaHoc
                    </a>
                }
                </div>
            </div>
        
      </div>
    </div>
</div>
