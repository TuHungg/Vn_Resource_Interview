@{
    ViewData["Title"] = "Subject";
}

<div class="text-center">
    <h1 class="display-4">@ViewData["Title"]</h1>
        <div class="container text-center">
      <div class="row row-cols-2">
            <div class="col-2" style="width: 40%;">
                @foreach(var khoahoc in ViewBag.KhoaHoc)
                {
                    <h3> Khóa Học: </h3> <spam>@khoahoc.TenKhoaHoc</spam>
                }

                <ol class="list-group list-group-numbered">
                    <hr style="color: red; border-width: 2px; border-style: solid" />
                    @foreach(var monhoc in ViewBag.MonHoc)
                    {
                    <li class="list-group-item">
                        @monhoc.TenMonHoc 
                     </li>
                    }
                </ol>
                
            </div>

      </div>
    </div>
</div>
